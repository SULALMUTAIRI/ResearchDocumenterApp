<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResearchDocumenter.View.AddArticle">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10"> 
                 <Entry Placeholder="Title" Text="{Binding Title}"  WidthRequest="100" Grid.Row="3"></Entry> 
                <Entry Placeholder="Year" Text="{Binding Year}" WidthRequest="100" Grid.Row="3"></Entry>
                <Entry Placeholder="MainAuthor" Text="{Binding MainAuthor}" WidthRequest="100" Grid.Row="3"></Entry>
                <Button x:Name="Add_Article" Text="Add Article" Clicked="Add_Article_ClickedAsync" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>